{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ]
    },
    "include": [
        "src",
        "css.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}